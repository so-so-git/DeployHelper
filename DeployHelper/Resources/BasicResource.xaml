<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:DeployHelper.Converters">

    <conv:DeployStatusConverter x:Key="DeployStatusConverter" />
    <conv:StatusVisibilityConverter x:Key="StatusVisibilityConverter" />
    <conv:InverseBoolConverter x:Key="InverseBoolConverter" />

    <Style TargetType="Window">
        <Setter Property="Language" Value="ja-jp" />
    </Style>
    
    <Style TargetType="TextBlock">
        <Setter Property="Height" Value="20" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>
    
    <Style TargetType="CheckBox">
        <Setter Property="Height" Value="20" />
    </Style>
    
    <Style TargetType="ComboBox">
        <Setter Property="Height" Value="24" />
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="Width" Value="75" />
        <Setter Property="Height" Value="24" />
    </Style>
    
    <Style TargetType="DataGrid">
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="CanUserAddRows" Value="False" />
        <Setter Property="CanUserDeleteRows" Value="False" />
        <Setter Property="SelectionMode" Value="Single" />
        <Setter Property="SelectionUnit" Value="FullRow" />
    </Style>
    
</ResourceDictionary>